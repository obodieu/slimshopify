{
    "name": "obodieu/slimshopify",
    "description": "A Slim Framework skeleton application for hopify apps development",
    "keywords": [
        "psr7"
    ],
    "license": "Private",
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "phpclassic/php-shopify": "^1.1",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.1",
        "slim/twig-view": "^3.0",
        "slince/shopify-api-php": "*",
        "vlucas/phpdotenv": "^2.4"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
